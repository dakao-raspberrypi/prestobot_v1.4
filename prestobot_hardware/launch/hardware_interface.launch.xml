<launch>
    <let name="urdf_path" value="$(find-pkg-share prestobot_description)/urdf/prestobot.urdf.xacro" />

    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description" value="$(command 'xacro $(var urdf_path)')" />
    </node>

    <node pkg="controller_manager" exec="ros2_control_node">
        <param name="robot_description" value="$(command 'xacro $(var urdf_path)')" />
        <param name="use_sim_time" value="false" />
        <param from="$(find-pkg-share prestobot_controller)/config/prestobot_controller.yaml" />
    </node>
</launch>